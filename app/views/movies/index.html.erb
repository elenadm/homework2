<h1>All Movies</h1>

<table id="movies">
  <thead>
  <tr>

    <th class=<%= @cssclass %>><%= link_to 'Movie Title', movies_path(mov: "aaa") %> </th>
    <th>Rating</th>
    <th class=<%= @cssclass1 %>><%= link_to 'Release Date', movies_path(mov: "bbb") %></th>
    <th>More Info</th>
  </tr>
  </thead>
  <tbody>
  <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release_date %></td>
        <td><%= link_to "More about #{movie.title}", movie_path(movie) %></td>
      </tr>
  <% end %>
  </tbody>
</table>

